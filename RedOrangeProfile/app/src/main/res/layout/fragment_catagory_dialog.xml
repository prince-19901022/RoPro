<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.redoangecom.dialog.roictintern.redorangeprofile.fragments.CatagoryDialog">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation_backgrond">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/catagory_icon"
            android:id="@+id/dialogIcon"
            android:scaleType="centerCrop"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/cdTitle"
            android:layout_toRightOf="@id/dialogIcon"
            android:text="Select  Catagory"
            android:textColor="@color/orange"
            android:textSize="@dimen/textLarge"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catagoryList"/>
</LinearLayout>
