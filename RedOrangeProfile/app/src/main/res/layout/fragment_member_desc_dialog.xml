<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.redoangecom.dialog.roictintern.redorangeprofile.fragments.MemberDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12dp">

        <com.redoangecom.dialog.roictintern.redorangeprofile.utils.ProportionalImageView
            android:layout_width="@dimen/size_150"
            android:layout_height="@dimen/size_150"
            android:id="@+id/member_imageDsc"
            android:scaleType="centerCrop"
            android:paddingLeft="@dimen/_10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/member_imageDsc"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/member_nameDsc"
                android:textAppearance="@style/titleProps"
                android:gravity="center"
                android:text="Ahmed Shafi Chowdhuri"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desigDsc"
                android:text="Head Of Operation"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:gravity="center"
                android:layout_marginTop="@dimen/_8dp"
                android:paddingRight="@dimen/_10dp"
                android:paddingLeft="@dimen/_10dp"/>

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/desc"
                android:text="@string/geert_profile"
                android:paddingLeft="@dimen/_12dp"
                android:textAppearance="@style/bodyProps"
                android:fontFamily="@string/grid_font"
                android:gravity="left"
                android:paddingRight="@dimen/_10dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/OK"
                android:text="OK"
                android:textSize="@dimen/textSizeNormal"
                android:textColor="@color/cardTitle_bg"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/_8dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
